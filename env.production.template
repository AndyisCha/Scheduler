# Production Environment Variables Template
# Copy this file to .env.production and replace with your actual values

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Get these values from your Supabase project settings > API
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
VITE_ENVIRONMENT=production

# =============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# =============================================================================
# Google Analytics (optional)
VITE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry for error tracking (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# OPTIONAL: FEATURE FLAGS
# =============================================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# =============================================================================
# Email service (if using custom email provider)
VITE_EMAIL_SERVICE_API_KEY=your-email-api-key

# File upload service (if using custom file storage)
VITE_FILE_UPLOAD_ENDPOINT=https://your-file-service.com/api

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
# Content Security Policy (optional)
VITE_CSP_NONCE=your-csp-nonce

# API rate limiting (optional)
VITE_API_RATE_LIMIT=100

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Bundle analysis (optional)
VITE_ENABLE_BUNDLE_ANALYZER=false

# Debug mode (should be false in production)
VITE_DEBUG=false

# =============================================================================
# DEPLOYMENT INFO
# =============================================================================
# These are automatically set by Vercel
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-app.vercel.app
